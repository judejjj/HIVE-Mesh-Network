<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hive_dark">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/detailsContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/btnAutoDetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTO DETECT GPS"
        android:backgroundTint="#00E5FF"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/hive_surface"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapFragment"
        app:layout_constraintVertical_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM DISTRESS SIGNAL"
            android:textColor="#FF5252"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etSosDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_input_glass"
            android:hint="Describe Emergency (e.g. Broken Leg, Fire)"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:padding="20dp"
            android:minHeight="100dp"
            android:gravity="top"/>

        <TextView
            android:id="@+id/tvCoordinates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COORDS: [SELECT LOCATION]"
            android:textColor="@color/hive_accent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBroadcastSos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="BROADCAST ALERT"
            android:background="@drawable/btn_glow"
            android:backgroundTint="#D50000"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>